{
  "manifest_version": 3,
  "name": "Time Series Query Builder",
  "version": "1.0.0",
  "description": "Build and launch complex time series queries with ease.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "permissions": [
    "activeTab", 
    "clipboardWrite"
  ]
}
